<% layout("layouts/boilerplate") %>

    <div class="row mt-4 ">
        <h1 class="col-6 offset-3">Sign Up on Wanderlust</h1>
        <div class="col-6 offset-3 ">
            <!-- username  -->
              <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-4 mt-3">
               
                <label for="username" class="form-label">Username</label>
                <!-- listing[title]  title key of listing object for each sequence wise related to  req.body.listing;   -->
                <input type="text" name="username" id="username" placeholder="Enter your username" class="form-control"
                    required>


            </div>
            <!-- email  -->
            <div class="mb-4 mt-3">

                <label for="emial" class="form-label">Email</label>
                <!-- listing[title]  title key of listing object for each sequence wise related to  req.body.listing;   -->
                <input type="text" name="email" id="email" placeholder="Enter your email" class="form-control" required>


            </div>


            <!-- password -->

            <div class="mb-4 mt-3">

                <label for="password" class="form-label">Password</label>
                <!-- listing[title]  title key of listing object for each sequence wise related to  req.body.listing;   -->
                <input type="password" name="password" id="password" placeholder="Enter your password"
                    class="form-control" required>


            </div>

            <button class="btn btn-success mb-4">SignUp </button>
            <!-- <button>signup</button> -->

            </form>
        </div>
    </div>