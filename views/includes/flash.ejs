<!-- Toast container (position fixed, center) -->

<style>
    /* Centered container */
.toast-container-center {
  position: fixed;
   left: 80%;
  transform: translate(-50%, -50%);
  z-index: 1080;
  display: flex;
  flex-direction: column;
  gap: 1rem; /* spacing between multiple toasts */
 
}

/* Toast basic style */
.toast {
  min-width: 250px;
  max-width: 400px;
  padding: 1rem 1.5rem;
  border-radius: 0.5rem;
  box-shadow: 0 0.25rem 0.75rem rgba(231, 200, 200, 0.25);
  font-size: 1rem;
  opacity: 0;
  transform: translateY(-20px);
  animation: slideFadeIn 0.5s forwards;
}

/* Slide + fade in animation */
@keyframes slideFadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Slide + fade out animation */
@keyframes slideFadeOut {
  0% {
    opacity: 1;          /* start fully visible */
    transform: translateY(0);
  }
  100% {
    opacity: 0;          /* end fully transparent */
    transform: translateY(-20px); /* slide up while fading */
  }
}

/* Success and Error colors */
.toast-success {  color: rgb(8, 6, 6); font-weight: bold; font-family: Arial, sans-serif;}
.toast-error {  color: rgb(223, 20, 20); font-weight: bold; font-family: Arial, sans-serif; }
  

.toast-hide {
  animation: slideFadeOut 2s forwards;
}

</style>

<div class="toast-container-center">
  <% if (success && success.length) { %>
    <div class="toast toast-success align-items-center show" 
         role="alert" 
         aria-live="assertive" 
         aria-atomic="true">
      <div class="d-flex justify-content-center">
        <div class="toast-body">
          <%= success %>
        </div>
      </div>
    </div>
  <% } %>

  <% if (error && error.length) { %>
    <div class="toast toast-error align-items-center show" 
         role="alert" 
         aria-live="assertive" 
         aria-atomic="true">
      <div class="d-flex justify-content-center">
        <div class="toast-body">
          <%= error %>
        </div>
      </div>
    </div>
  <% } %>
</div>


<script>
document.addEventListener("DOMContentLoaded", () => {
  const toasts = document.querySelectorAll('.toast');

  toasts.forEach(toast => {
    // Fully visible for 3 seconds
    setTimeout(() => {
      toast.classList.add('.toast-hide'); // start 2s fade
      setTimeout(() => toast.remove(), 3000); // remove after fade
    }, 3000);
  });
});
</script>